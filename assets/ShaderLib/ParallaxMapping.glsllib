vec2 parallaxOffset(sampler2D parallaxMap, float texScale, vec3 vViewDir, vec2 texCoord, float parallaxHeight) { 
    float h = texture2D(parallaxMap, texCoord * texScale).r;
    float heightScale = parallaxHeight;
    float heightBias = heightScale * -0.6;
    vec3 normView = normalize(vViewDir);       
    h = (h * heightScale + heightBias) * normView.z;
    return texCoord + (h * normView.xy);
}